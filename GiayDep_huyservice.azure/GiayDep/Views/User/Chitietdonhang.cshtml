@using GiayDep.Service_CTDH;
@model List<SanPham_Price>


<section>


    <div class="content">
        <div class="container">

            <div class="row">
                <!-- detail Item -->
                <div class="col-lg-12">
                    <h1 class="tp-order-h1">Chi tiết đơn hàng </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="tp-order-h2">Đơn hàng</h2>

                    <div class="span7">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h4>Chi tiết đơn hàng</h4>
                            </div>

                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th data-field="state" data-radio="true">ID</th>
                                        <th data-field="id" data-align="right">Sản phẩm</th>
                                        <th data-field="id" data-align="right">Màu</th>
                                        <th data-field="id" data-align="right">Size</th>
                                        @*<th data-field="id" data-align="right">Số lượng</th>*@
                                        <th data-field="price" data-align="left">Giá</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>#@item._MaSP</td>
                                            <td>@item._TenSP</td>
                                            <td>@item._TenMau</td>
                                            <td>@item._Size</td>
                                            @*<td>@item._SL</td>*@
                                            <td>@item._GiaSP.000đ</td>

                                        </tr>
                                    }}
                                    <!-- calculator -->
                             
                                    <!-- end calculator -->

                                </tbody>

                            </table>
                        

                        </div>
                    </div>
                </div>
            </div>
            <!-- end detal Items -->
            <!- detail customer-->
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="tp-order-h2">Thông tin khách hàng</h2>

                    <!-- begin panel -->
                    <div class="span7">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h4>Thông tin khách hàng</h4>
                            </div>

                            <div class="panel-body">

                                <ul>
                                    @Html.Action("Thongtinkhachhang", "User")

                            </ul>
