@using GiayDep.Service_Kho;
@model List<LayMau>

    <ul class="mau">
        @{
            foreach (var item in Model)
            {
                if (item._MaMau == @item._MaMau)
                {
                    <li class="mamau @item._MaMau">
                        <a href="@Url.Action("Chitietsanpham", new { @masp = item._MaSP, @mamau = item._MaMau})" name="mau"><img style="background-color:@item._TenMau" width="25" height="30" /></a>
                    </li>
                }


            }
        }
    </ul>

<style type="text/css">
    ul.mau li.active a {
        color: red;
        border-color: #dfdfdf;
    }
    ul.mau li.active {
        border: 1px solid #000;
        box-sizing:border-box;
        width:27px;
    }
    ul.mau li{
        float:left;
    }
    .item-mau {
        padding: 10px 1px;
    }
    product-information .cart {
       
        margin-bottom: 10px;
        margin-left: 10px;
    }

    
 
</style>
<script>
    $(document).ready(function () {
        var $mau = $("#mau-hien-tai").attr("class");
        $("li.mamau." + $mau).addClass("active");
    });
</script>
