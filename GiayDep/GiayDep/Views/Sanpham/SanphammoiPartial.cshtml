@using GiayDep.Service_SanPham_Kho;
@model List<SanPham_Price>

@{
    foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        
                        <a href="@Url.Action("Chitietsanpham", new { @masp = item._MaSP })"><img src="@Url.Content("~/images/home/" + item._HinhAnh.Split(new Char[] { ' ' })[0])" alt="" height="237" width="255" /></a>
                        <h2>@item._GiaSP.000đ</h2>
                        <p>@item._TenSP</p>
                @using (Html.BeginForm("Muangay", "SanPham", new { @imasp = item._MaSP, @mamau= item._MaMau }))
                    {
                        //<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                        <button type="submit" class="btn btn-fefault cart">
                        <i class="fa fa-shopping-cart"></i>
                        Mua ngay
                    </button>
                    }
                    </div>
                </div>
                <img src="images/home/new.png" class="new" alt="">;
            </div>
        </div>
    }

}
