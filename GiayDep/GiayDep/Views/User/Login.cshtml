
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/GiayDep/Trangkethua.cshtml";
}

    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Đăng nhập</h2>
                    @using (Html.BeginForm())
                    {
                            <input type="email" placeholder="Nhập vào Email" name="email" />
                            <input type="password" placeholder="Nhập vào mật khẩu" name="password" />
                        
                        <button type="submit" class="btn btn-default">Đăng nhập</button>
                    } 
                <br />
                    <a href="/User/Register"><i class="fa fa-lock btn btn-default"></i> Đăng kí</a>&nbsp;&nbsp;
                    <a href="#"><i class=" fa fa-facebook btn-social btn-facebook"></i> Facebook</a>
                </div><!--/login form-->
            </div>
        </div>
    </div>
