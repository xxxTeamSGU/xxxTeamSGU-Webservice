@using GiayDep.Service_KhachHang;
@model KhachHang
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/GiayDep/Trangkethua.cshtml";
}

@{
    var khachhang = Session["khachhang"] as KhachHang;
 
}
@if (khachhang!=null)
{
    <h1>
        @ViewBag.Thongbao</h1>
<!--form-->
}
else
{


    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <center><h3>Đăng nhập</h3></center>
                <br />
                    @using (Html.BeginForm("Login", "User", new { @strUrl = Request.Url.ToString() }))
                    {
                            <input type="email" placeholder="Nhập vào Email" name="email" />
                            <input type="password" placeholder="Nhập vào mật khẩu" name="password" />

                         <center><button type="submit" class="btn btn-default">Đăng nhập</button></center>
                    }
                    <br />
                    
                    <a href="/User/Register" class="btn btn-default"><i class="fa fa-lock btn btn-default"></i> Đăng kí</a>&nbsp;&nbsp;
                    @*//<a href="#"><i class=" fa fa-facebook btn-social btn-facebook"></i> Facebook</a>*@

                </div><!--/login form-->
            </div>
        </div>
    </div>
<button class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Large modal</button>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            ....
        </div>
    </div>
</div>

}